<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include android:id="@+id/toolBar" layout="@layout/custom_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:padding="20dp"
            android:text="@string/feeds"
            android:id="@+id/textView" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/app_icon"
                android:id="@+id/imageView1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/trelokouneli"
                    android:text="@string/kouneli"
                    android:id="@+id/kouneli" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_tromaktiko"
                    android:text="@string/tromaktiko"
                    android:id="@+id/tromaktiko" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_xdatv"
                    android:text="@string/xda"
                    android:layout_weight="1"
                    android:id="@+id/xdabtn" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enimerwsi"
                    android:drawableLeft="@drawable/stack"
                    android:layout_weight="1"
                    android:id="@+id/enimerwsibtn" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
