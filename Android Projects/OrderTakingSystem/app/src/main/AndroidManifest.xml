<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kostas.ordertakingsystem" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_restaurantblue_128"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kostas.accounts.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewOrder"
            android:label="@string/title_activity_new_order" >
        </activity>
        <activity
            android:name="com.example.kostas.functions.Cart"
            android:label="@string/title_activity_cappucino" >
        </activity>
        <activity
            android:name="com.example.kostas.functions.CurrentProduct"
            android:label="@string/title_activity_freddo" >
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.example.kostas.accounts.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".Tables"
            android:label="@string/title_activity_tables" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

</manifest>
